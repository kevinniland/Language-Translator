<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LanguageTranslator.History">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout x:Name="slDbData" Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Center" Margin="3, 3, 3, 3">
            <TableView x:Name="tvDbData">
                <TableRoot>
                    <TableSection Title="Previous Translations">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Entry x:Name="entData" Placeholder="Your previous translations will appear here" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </Grid>
</ContentPage>